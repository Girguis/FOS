<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:id="@+id/bar"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/barbackground">

    <ImageView
        android:id="@+id/facultyLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/facultylogo" />

    <TextView
        android:id="@+id/uniTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/univLogo"
        android:layout_toEndOf="@id/facultyLogo"
        android:gravity="center"
        android:text="جامعة عين شمس"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uniTxt"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/univLogo"
        android:layout_toEndOf="@id/facultyLogo"
        android:gravity="center"
        android:text="كلية العلوم"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/univLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ainshamsunivlogo" />
</RelativeLayout>